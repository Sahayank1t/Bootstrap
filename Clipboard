function copyArrayToClipboard(tableData) {
  // Create the table data as tab-separated plain text
  let tableText = '';
  for (const row of tableData) {
    tableText += row.join('\t') + '\n'; // Join row with tabs and add newline
  }

  // Create a temporary element to hold the table text
  const textArea = document.createElement('textarea');
  textArea.style.position = 'fixed';
  textArea.style.left = '-999999px';
  textArea.value = tableText;

  // Append the textarea to the body, select its content, and copy
  document.body.appendChild(textArea);
  textArea.select();
  document.execCommand('copy');
  document.body.removeChild(textArea);

  // Display a success message (optional)
  alert('Array data copied to clipboard as a table!');
}

// Example usage:
const myArray = [
  ['Column 1', 'Column 2', 'Column 3'],
  ['Data 1-1', 'Data 1-2', 'Data 1-3'],
  ['Data 2-1', 'Data 2-2', 'Data 2-3'],
];

const copyButton = document.getElementById('copyButton');
copyButton.addEventListener('click', () => copyArrayToClipboard(myArray));

